
<EditForm Model="@Model" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudTextField @bind-Value="Model.LastName"  MaxLength="30" Label="Прізвище" For="@(() => Model.LastName)" Variant="Variant.Text"></MudTextField>
            <MudTextField @bind-Value="Model.Salary" InputType="InputType.Number" min="0" max="200000" Label="Заробітна плата" For="@(() => Model.Salary)" Variant="Variant.Text"></MudTextField>
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Class="ml-auto">Оновити</MudButton>
            <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Error">Відмінити</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>